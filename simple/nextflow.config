// Pipeline parameters

params {
    fasta = "../data/assembly.fasta.gz"
    pfam_db = "../data/pfama_mini.hmm"
    outdir = "results"
}

// Execution profiles
profiles {
    conda {
        conda.enabled = true
        conda.useMicromamba = true
    }
    docker {
        docker.enabled = true
    }
}

// Process resources
process {
    cpus = 2
    memory = 4.GB

    // Error strategy
    errorStrategy = 'retry'
    maxRetries = 2
}

// Reporting and tracing
report {
    file = "${params.outdir}/report.html"
    enabled = true
    overwrite = true
}
trace {
    file = "${params.outdir}/trace.txt"
    enabled = true
    overwrite = true
}
timeline {
    file = "${params.outdir}/timeline.html"
    enabled = true
    overwrite = true
}
